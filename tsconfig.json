{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": "./src",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"],
      "@/generated/prisma": ["generated/prisma"],
      "@/lib/prisma": ["lib/prisma"],
      "@/app/lib/api": ["app/lib/api"],
      "@/app/components/NewsCard": ["app/components/NewsCard"],
      "@/app/components/SaveButton": ["app/components/SaveButton"],
      "@/components/ThemeProvider": ["src/components/ThemeProvider"],
      "@/lib/auth": ["src/lib/auth"]
    },
    "typeRoots": ["./types", "./node_modules/@types"]
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "postcss.config.js"],
  "exclude": ["node_modules"]
}
