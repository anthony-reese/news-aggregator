{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": "./",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "/src/*"
      ],
      "@/generated/prisma": [
        "generated/prisma"
      ],
      "@/lib/prisma": [
        "lib/prisma"
      ],
      "@/lib/^": [
        "app/lib/*"
      ],
      "@/api/auth/[...nextauth]": [
        "api/auth/[...nextauth]"
      ],
      "@/app/components/ArticleCard": [
        "app/components/ArticleCard"
      ],
      "@/app/components/SaveButton": [
        "app/components/SaveButton"
      ],
      "@/components/ThemeProvider": [
        "src/components/ThemeProvider"
      ],
      "@/lib/auth": [
        "src/lib/auth"
      ],
      "@/types/Article": [
        "src/types/Article"
      ]
    },
    "typeRoots": [
      "./types",
      "./node_modules/@types"
    ]
  },
  "include": [
    "next-env.d.ts",
    "src/**/*",
    "types/**/*",
    ".next/types/**/*.ts",
    "postcss.config.js",
    "prisma"
  ],
  "exclude": [
    "node_modules", 
    ".next", 
    "dist", 
    "build", 
    "out"
  ]
}
